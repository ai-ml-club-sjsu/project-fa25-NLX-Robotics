{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NLXFilePlan",
  "type": "object",
  "required": ["task", "steps"],
  "properties": {
    "task": { "type": "string", "minLength": 1 },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["skill", "params"],
        "properties": {
          "skill": {
            "type": "string",
            "enum": [
              "create_file",
              "write_text",
              "append_text",
              "read_file",
              "list_dir",
              "move_file",
              "copy_file",
              "delete_file",
              "replace_text",
              "remove_text"
            ]
          },
          "params": {
            "type": "object",
            "properties": {
              "path":    { "type": "string", "minLength": 1 },
              "dest":    { "type": "string" },
              "text":    { "type": "string" },
              "find":    { "type": "string" },
              "replace": { "type": "string" },
              "count":   { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": false
          },
          "constraints": {
            "type": "object",
            "properties": {
              "timeout_s": { "type": "number", "minimum": 0, "maximum": 30 }
            },
            "additionalProperties": false
          },
          "on_fail": {
            "type": "string",
            "enum": ["abort", "skip", "continue"],
            "default": "abort"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
